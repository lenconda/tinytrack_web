{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "outDir": "dist/server",
    "typeRoots": ["../typings"],
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "allowJs": true,
    "pretty": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./server",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "lib": [
      "es5",
      "dom",
      "esnext",
      "es2017",
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "includes": [
    "server"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./node_modules/@types/**/*",
    "dist/**/*",
    "src/**/*",
    "**/*.js",
  ]
}
